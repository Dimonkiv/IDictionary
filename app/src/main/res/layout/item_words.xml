<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item"
    android:paddingStart="10dp"
    android:paddingTop="15dp"
    android:paddingEnd="10dp"
    android:paddingBottom="15dp"
    android:layout_marginBottom="15dp">

    <View
        android:id="@+id/mark_v"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_button"/>

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус"
        android:textColor="@color/secondaryText"
        android:layout_toEndOf="@id/mark_v"/>
    <TextView
        android:id="@+id/original_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оригінал"
        android:layout_toEndOf="@id/mark_v"
        android:layout_below="@id/status_tv"
        android:textColor="@color/primaryText"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/translated_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Переклад"
        android:layout_toEndOf="@id/mark_v"
        android:layout_below="@id/original_tv"
        android:textColor="@color/secondaryText"
        android:textSize="20sp" />
    <ImageView
        android:id="@+id/microphone_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_microphone"/>

</RelativeLayout>